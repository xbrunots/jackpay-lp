{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "jest",
      "babel__core",
      "babel__generator",
      "babel__template",
      "babel__traverse",
      "estree",
      "json-schema"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "build", "dist", ".next", "**/*.spec.ts", "**/*.test.ts"]
}
